#: import Factory kivy.factory.Factory
#: import Keypad components.keypad

<CoordBar>:
  orientation: "horizontal"
  size_hint_y: 1
  Button:
    width: 96
    size_hint_x: None
    text: root.axisName
    font_size: self.height / 1.5
    background_color: [0.2, 1, 0.2, 1] if root.syncEnable else [0.3, 0.3, 0.3, 1]
    on_release: root.toggle_sync()

  BoxLayout:
    orientation: "horizontal"
    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Button:
        background_color: (0, 0, 0, 1)
        id: pos_label
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 1.5
        font_style: "bold"
        color: app.formats.display_color
        text: app.formats.position_format.format(root.position / app.formats.factor) if root.mode == 0 else app.formats.speed_format.format(root.speed / app.formats.factor)
        text_size: self.size
        halign: 'right'
        valign: 'center'
        on_release: root.update_position()
      Label:
        size_hint_y: 0.3
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 1.5
        font_style: "bold"
        color: app.formats.display_color
        text: app.formats.speed_format.format(root.speed / app.formats.factor)
        text_size: self.size
        halign: 'right'
        valign: 'top'

    BoxLayout:
      size_hint_x: None
      width: 100
      orientation: 'vertical'
      Label:
        text: "Num"
        font_size: self.height / 1.5
        size_hint_y: 0.3
        color: app.formats.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 2
        font_style: "bold"
        background_color: [0.3, 0.3, 0.3, 1]
        color: app.formats.display_color
        text: str(int(root.syncRatioNum))
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: Factory.Keypad().show(root, 'syncRatioNum')

    BoxLayout:
      size_hint_x: None
      width: 100
      orientation: 'vertical'
      Label:
        text: "Den"
        font_size: self.height / 1.5
        size_hint_y: 0.3
        color: app.formats.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: self.height / 2
        font_style: "bold"
        background_color: [0.3, 0.3, 0.3, 1]
        color: app.formats.display_color
        text: str(int(root.syncRatioDen))
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: Factory.Keypad().show(root, 'syncRatioDen')

  Button:
    text: "Zero"
    font_size: 24
    font_style: "bold"
    background_color: [0.5, 0.5, 0.5, 1]
    width: self.height
    size_hint_x: None
    on_release: root.zero_position()
