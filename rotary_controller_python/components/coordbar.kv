#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import appsettings components

<CoordBar>:
  orientation: "horizontal"
  height: 80
  size_hint_y: None
  Label:
    text: root.data.axis_name
    width: self.height
    size_hint_x: None
    font_size: 64
    font_style: "bold"
  BoxLayout:
    orientation: "horizontal"
    BoxLayout:
      size_hint_x: 0.5
      orientation: "vertical"
      Button:
        background_color: (0, 0, 0, 1)
        id: pos_label
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 48
        font_style: "bold"
        color: app.display_color
        text: app.pos_format.format(root.data.position / app.unit_factor)
        text_size: self.size
        halign: 'right'
        valign: 'center'
        on_release: Factory.Keypad().show(root.data, 'set_position')
      Label:
        size_hint_y: 0.3
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 16
        font_style: "bold"
        color: app.display_color
        text: app.speed_format.format(root.formatted_axis_speed)
        text_size: self.size
        halign: 'right'
        valign: 'top'

    BoxLayout:
      size_hint_x: 0.20
      orientation: 'vertical'
      Label:
        text: "Num"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 32
        font_style: "bold"
        background_color: [0.2, 0.2, 0.2, 1]
        color: app.display_color
        text: str(root.data.sync_num)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: Factory.Keypad().show(root.data, 'sync_num')

    BoxLayout:
      size_hint_x: 0.20
      orientation: 'vertical'
      Label:
        text: "Den"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.7
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 32
        font_style: "bold"
        background_color: [0.2, 0.2, 0.2, 1]
        color: app.display_color
        text: str(root.data.sync_den)
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_release: Factory.Keypad().show(root.data, 'sync_den')

    BoxLayout:
      size_hint_x: 0.10
      orientation: 'vertical'
      Label:
        text: "SYNC"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'center'
        valign: 'top'
      ToggleButton:
        text: "ON" if self.state == "down" else "OFF"
        state: root.data.sync_enable
        background_color: [0.2, 1, 0.2, 1] if self.state == "down" else [1, 0.2, 0.2, 1]
        on_release: root.data.sync_enable = self.state

  Button:
    text: "Zero"
    font_size: 24
    font_style: "bold"
    background_color: [0.5, 0.5, 0.5, 1]
    width: self.height
    size_hint_x: None
    on_release: root.data.set_position = 0
