#: import LedButton components.ledbutton

<StatusBar>:
  size_hint_x: 1
  size_hint_y: None
  height: 32
  orientation: "horizontal"

  LedButton:
    # Communication Alarm
    height: self.width
    size_hint_x: None
    width: 64
    label: "COM"
    checkbox_value: root.device.connected or app.blink

  LedButton:
    # READY LED
    height: self.width
    size_hint_x: None
    valign: "top"
    width: 64
    label: "RDY"
    checkbox_value: root.device.connected

  LedButton:
    # RUN SYN LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "SYN"
    checkbox_value: (root.device.rq_synchro_init and app.blink) or root.device.mode_synchro

  LedButton:
    # RUN INDEX LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "IDX"
    checkbox_value: (root.device.rq_index_init and app.blink) or root.device.mode_index

  LedButton:
    # RUN JOG LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "JOG"
    checkbox_value: False

  LedButton:
    height: self.width
    size_hint_x: None
    width: 64
    label: "REV"
    checkbox_value: False

  LedButton:
    height: self.width
    size_hint_x: None
    width: 64
    label: "FWD"
    checkbox_value: False

  LedButton:
    # ERROR LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "ERR"
    checkbox_value: root.device.error and app.blink
