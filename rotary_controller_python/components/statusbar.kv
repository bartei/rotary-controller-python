#: import LedButton components.ledbutton

<StatusBar>:
  size_hint_x: 1
  size_hint_y: None
  height: 32
  orientation: "horizontal"

  LedButton:
    # Communication Alarm
    height: self.width
    size_hint_x: None
    width: 64
    label: "COM"
    checkbox_value: app.connected or app.blink

  LedButton:
    # READY LED
    height: self.width
    size_hint_x: None
    valign: "top"
    width: 64
    label: "RDY"
    checkbox_value: app.status.ready

  LedButton:
    # RUN SYN LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "SYN"
    checkbox_value: app.status.synchro_mode

  LedButton:
    # RUN INDEX LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "IDX"
    checkbox_value: app.status.index_mode

  LedButton:
    # RUN JOG LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "JOG"
    checkbox_value: False

  LedButton:
    # RUN JOG LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "REV"
    checkbox_value: app.status.reverse

  LedButton:
    # RUN JOG LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "FWD"
    checkbox_value: app.status.forward

  LedButton:
    # ERROR LED
    height: self.width
    size_hint_x: None
    width: 64
    label: "ERR"
    checkbox_value: app.status.error_bad_ratio
