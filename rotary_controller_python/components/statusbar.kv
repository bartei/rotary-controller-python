#: import LedButton rotary_controller_python.components.toolbars.led_button

<StatusBar>:
  size_hint_x: 1
  size_hint_y: None
  height: 32
  orientation: "horizontal"

  LedButton:
    # Communication Alarm
    size_hint_x: None
    width: 64
    label: "COM"
    checkbox_value: app.connected or app.blink

#  LedButton:
#    # INT.CYCLES
#    size_hint_x: None
#    width: 64
#    label: str(int(root.maxSpeed))

  LedButton:
    # INTERRUPT INTERVAL
    size_hint_x: None
    width: 64
    label: "{:0.0f}".format(0 if root.interval == 0 else (100000000 / root.interval))

#  LedButton:
#    # CURRENT SERVO SPEED
#    size_hint_x: None
#    width: 64
#    label: str(int(root.speed))

  LedButton:
    # FPS
    size_hint_x: None
    width: 64
    label: str(int(root.fps))

  LedButton:
    # CYCLES
    size_hint_x: None
    width: 64
    label: str(root.cycles)
