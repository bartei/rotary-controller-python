<KeypadButton@Button>:
  font_size: 32
  font_name: "fonts/Manrope-Bold.ttf"

<KeypadIconButton@KeypadButton>:
  font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
  text: "\uf55a"

<Keypad>:
  title: "Old Value: " + str(root.current_value)
  size_hint: 0.8, 0.8
  auto_dismiss: False

  BoxLayout:
    orientation: "vertical"
    Label:
      id: value
      font_name: "fonts/Manrope-Bold.ttf"
      font_size: 48

    BoxLayout:
      orientation: "horizontal"
      KeypadButton:
        text: "7"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "8"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "9"
        on_release: root.ids.value.text+= self.text
      KeypadIconButton:
        text: "\uf55a"
        on_release: root.ids.value.text = root.ids.value.text[:-1]
    BoxLayout:
      orientation: "horizontal"
      KeypadButton:
        text: "4"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "5"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "6"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "\u00bd"
        on_release: root.ids.value.text = str(root.current_value / 2)
    BoxLayout:
      orientation: "horizontal"
      KeypadButton:
        text: "1"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "2"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "3"
        on_release: root.ids.value.text+= self.text
      KeypadIconButton:
        text: "\ue43c"
        on_release: root.sign_key()
    BoxLayout:
      orientation: "horizontal"
      KeypadButton:
        text: "0"
        on_release: root.ids.value.text+= self.text
      KeypadButton:
        text: "."
        on_release: root.dot_key()
      KeypadIconButton:
        text: "\uf00d"
        background_color: "#cf3a3a"
        on_release: root.cancel()
      KeypadIconButton:
        text: "\uf00c"
        background_color: "#349e65"
        on_release: root.confirm()
