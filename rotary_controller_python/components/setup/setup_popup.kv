#: import SetupScreenManager components.setup.setup_screen_manager

<SetupPopup>:
  id: setup_popup
  screen_manager: screen_manager
  screen_selector: screen_selector
  title: "Setup"
  size_hint: 1, 1
  auto_dismiss: False
  BoxLayout:
    orientation: "horizontal"
    BoxLayout:
      id: screen_selector
      size_hint_x: None
      width: 128
      orientation: "vertical"
      Button:
        text: "Scale 0"
        on_release: root.screen_manager.current = "scale_0"
      Button:
        text: "Scale 1"
        on_release: root.screen_manager.current = "scale_1"
      Button:
        text: "Scale 2"
        on_release: root.screen_manager.current = "scale_2"
      Button:
        text: "Scale 3"
        on_release: root.screen_manager.current = "scale_3"
      Button:
        text: "Servo"
        on_release: root.screen_manager.current = "servo"
      Button:
        text: "Network"
        on_release: root.screen_manager.current = "network"

#      Button:
#        text: "Logs"
#        on_release: root.screen_manager.current = "logs"
      Button:
        text: "Exit"
        on_release: root.dismiss()

    SetupScreenManager:
      id: screen_manager
      setup_popup: setup_popup
