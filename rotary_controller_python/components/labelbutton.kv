<LabelButton>:
  label: "label"
  format: "{}"
  value: 0
  orientation: "vertical"
  size_hint_x: 0.4
  Label:
    text: root.label
    text_size: self.size
    size_hint_y: 0.3
    font_size: 16
    color: app.display_color
    halign: 'left'
    valign: 'bottom'
  Button:
    background_color: 0.1, 0.1, 0.1, 1
    font_name: "fonts/Manrope-Bold.ttf"
    font_size: 48
    font_style: "bold"
    color: app.display_color
    text: root.format.format(root.value)
    text_size: self.size
    halign: 'left'
    valign: 'bottom'
    on_release: Factory.Keypad().show(root.release_function)
    disabled: app.mode != 0
