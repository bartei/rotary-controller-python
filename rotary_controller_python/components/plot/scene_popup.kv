#: import PlotToolbar rotary_controller_python.components.plot.plot_toolbar
#: import FloatView rotary_controller_python.components.plot.float_view

<ScenePopup>:
    title: "Plot View"
    size_hint: 0.8, 0.8
    auto_dismiss: False
    background_color: 0,0,0,1
    toolbar: toolbar
    float_view: float_view

    BoxLayout:
        orientation: "vertical"
        FloatView:
            id: float_view
        PlotToolbar:
            id: toolbar
            float_view: root.float_view
            popup_instance: root
