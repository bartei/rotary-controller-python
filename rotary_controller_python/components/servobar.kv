#: import Factory kivy.factory.Factory
#: import Keypad rotary_controller_python.components.keypad

<ServoBar>:
  orientation: "horizontal"
#  height: 128
  size_hint_y: None
  height: 128
  Button:
    width: 96
    size_hint_x: None
    text: root.servo.name
    font_size: self.height / 1.5
    font_style: "bold"
    background_color: [0.2, 1, 0.2, 1] if root.servo.servoEnable else [0.3, 0.3, 0.3, 1]
    on_release: root.servo.toggle_enable()
  BoxLayout:
    orientation: "vertical"
    size_hint_x: 0.2
    Label:
      text: "Current"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      color: app.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.30
      font_name: "fonts/iosevka-regular.ttf"
      font_size: 48
      font_style: "bold"
      background_color: [0.2, 0.2, 0.2, 1]
      color: app.formats.display_color
      text: app.formats.angle_format.format(root.servo.scaledPosition)
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      on_release: root.update_current_position()
    ProgressBar:
      size_hint_y: 0.20
      max: int(root.servo.maxSpeed)
      value: int(abs(root.servo.speed))

  BoxLayout:
    orientation: "vertical"
    size_hint_x: 0.2
    Label:
      text: "Offset"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      color: app.formats.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.35
      font_name: "fonts/iosevka-regular.ttf"
      font_size: 32
      font_style: "bold"
      background_color: [0.2, 0.2, 0.2, 1]
      color: app.formats.display_color
      text: app.formats.angle_format.format(root.servo.offset)
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      disabled: root.servo.disableControls
      on_release: Factory.Keypad().show(root.servo, 'offset')

    Label:
      text: "Divisions"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      color: app.formats.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.35
      font_name: "fonts/iosevka-regular.ttf"
      font_size: 32
      font_style: "bold"
      background_color: [0.2, 0.2, 0.2, 1]
      color: app.formats.display_color
      text: str(int(root.servo.divisions))
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      disabled: root.servo.disableControls
      on_release: Factory.Keypad().show(root.servo, 'divisions')

  BoxLayout:
    size_hint_x: None
    width: 200
    orientation: "vertical"
    BoxLayout:
      orientation: "horizontal"
      Button:
        font_size: 24
        font_style: "bold"
        text: "<"
        disabled: root.servo.disableControls
        on_release: root.servo.index = (root.servo.index - 1) % root.servo.divisions
      Button:
        font_size: 24
        font_style: "bold"
        text: ">"
        disabled: root.servo.disableControls
        on_release: root.servo.index = (root.servo.index + 1) % root.servo.divisions
    BoxLayout:
      orientation: "vertical"
      Label:
        text: "Index"
        text_size: self.size
        size_hint_y: 0.15
        font_size: 16
        color: app.formats.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.35
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 32
        font_style: "bold"
        background_color: [0.2, 0.2, 0.2, 1]
        color: app.formats.display_color
        text: str(int(root.servo.index))
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        disabled: root.servo.disableControls
        on_release: Factory.Keypad().show(root.servo, 'index')
