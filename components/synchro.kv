#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import LabelButton components.labelbutton
#: import LedButton components.ledbutton

<Synchro>:
  axis_name: "A"
  pos_format: app.angle_format

  orientation: "vertical"
  canvas.before:
    Color:
      rgba: (0,0,0,1)
    Rectangle:
      pos: self.pos
      size: self.size
  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    Label:
      text: root.axis_name
      width: 80
      size_hint_x: None
      font_size: 64
      font_style: "bold"
    BoxLayout:
      size_hint_x: 0.4
      orientation: "vertical"

      Label:
        text: "Current Angle"
        text_size: self.size
        size_hint_y: 0.3
        font_size: 16
        color: app.display_color
        halign: 'left'
        valign: 'bottom'
      Button:
        id: current_angle_button
        background_color: 0.1, 0.1, 0.1, 1
        font_name: "fonts/Manrope-Bold.ttf"
        font_size: 48
        font_style: "bold"
        color: app.display_color
        text: root.pos_format.format(app.current_position)
        text_size: self.size
        halign: 'left'
        valign: 'bottom'
        on_release: Factory.Keypad().show(app.set_current_position)
        disabled: app.in_motion
    Button:
      text: "Zero"
      font_size: 24
      font_style: "bold"
      background_color: [1, 0.2, 0.2, 1]
      width: 80
      size_hint_x: None
      on_release: root.axis_pos = "0"

  BoxLayout:
    orientation: "horizontal"
    height: 80
    size_hint_y: None
    LabelButton:
      label: "Numerator"
      format: "{}"
      value: app.syn_ratio_num
      release_function: app.set_sync_numerator
    LabelButton:
      label: "Denominator"
      format: "{}"
      value: app.syn_ratio_den
      release_function: app.set_sync_denominator
    Button:
      background_color: (0, 1, 0, 1)
      size_hint_x: None
      width: self.height
      text: "Request\nSynchro"
      text_halign: "center"
      on_release: app.request_syn_mode()
