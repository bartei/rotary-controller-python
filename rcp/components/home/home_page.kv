#: import HomeToolbar rcp.components.home.home_toolbar
<Label>:
  font_name: "fonts/iosevka-regular.ttf"
  font_size: app.formats.font_size

<Button>:
  font_name: "fonts/Manrope-Bold.ttf"
  font_size: app.formats.font_size

<TextInput>:
  font_name: "fonts/iosevka-regular.ttf"
  font_size: app.formats.font_size

<HomePage>:
  BoxLayout:
    orientation: "horizontal"

    HomeToolbar:
      id: home_toolbar

    BoxLayout:
      id: bars_container
      orientation: "vertical"
      size_hint: 1, 1
