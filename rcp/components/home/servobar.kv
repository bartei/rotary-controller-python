#: import Factory kivy.factory.Factory
#: import Keypad components.keypad

<ServoBar>:
  orientation: "horizontal"
  size_hint_y: None
  height: 128
  Button:
    width: 96
    size_hint_x: None
    text: root.name
    font_size: min(self.height / 1.5, self.width/1.5)
    font_style: "bold"
    background_color: [0.2, 1, 0.2, 1] if root.servoEnable else [0.3, 0.3, 0.3, 1]
    on_release: root.toggle_enable()
  BoxLayout:
    orientation: "vertical"
    size_hint_x: 0.2
    Label:
      text: "Current"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      color: app.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.30
      font_name: "fonts/iosevka-regular.ttf"
      font_size: min(self.height / 1.5, self.width/5)
      font_style: "bold"
      background_color: [0.2, 0.2, 0.2, 1]
      color: app.formats.display_color
      text: root.formattedPosition
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      disabled: root.disableControls
      on_release: root.update_current_position()
    ProgressBar:
      size_hint_y: 0.20
      max: int(root.maxSpeed)
      value: int(abs(root.speed))

  BoxLayout:
    orientation: "vertical"
    size_hint_x: 0.2
    Label:
      text: "Offset"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      color: app.formats.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.35
      font_name: "fonts/iosevka-regular.ttf"
      font_size: 32
      font_style: "bold"
      background_color: [0.2, 0.2, 0.2, 1]
      color: app.formats.display_color
      text: app.formats.angle_format.format(root.offset)
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      disabled: root.disableControls
      on_release: Factory.Keypad().show(root, 'offset')

    Label:
      text: "Divisions"
      text_size: self.size
      size_hint_y: 0.15
      font_size: 16
      color: app.formats.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.35
      font_name: "fonts/iosevka-regular.ttf"
      font_size: 32
      font_style: "bold"
      background_color: [0.2, 0.2, 0.2, 1]
      color: app.formats.display_color
      text: str(int(root.divisions))
      text_size: self.size
      halign: 'center'
      valign: 'middle'
      disabled: root.disableControls
      on_release: Factory.Keypad(integer=True).show(root, 'divisions')

  BoxLayout:
    size_hint_x: None
    width: 200
    orientation: "vertical"
    BoxLayout:
      orientation: "horizontal"
      Button:
        font_size: 24
        font_style: "bold"
        font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
        text: "\uf060"
        disabled: root.disableControls
        on_release: root.go_previous()
      Button:
        font_size: 24
        font_style: "bold"
        font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
        text: "\uf061"
        disabled: root.disableControls
        on_release: root.go_next()
    BoxLayout:
      orientation: "vertical"
      Label:
        text: "Index"
        text_size: self.size
        size_hint_y: 0.15
        font_size: 16
        color: app.formats.display_color
        halign: 'center'
        valign: 'top'
      Button:
        size_hint_y: 0.35
        font_name: "fonts/iosevka-regular.ttf"
        font_size: 32
        font_style: "bold"
        background_color: [0.2, 0.2, 0.2, 1]
        color: app.formats.display_color
        text: str(int(root.index))
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        disabled: root.disableControls
        on_release: Factory.Keypad(integer=True).show(root, 'index')
