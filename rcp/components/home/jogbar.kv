  BoxLayout:
    size_hint_x: 0.3
    orientation: 'vertical'
    Label:
      text: "Position"
      font_size: self.height / 1.75
      size_hint_y: 0.3
      color: app.formats.display_color
      halign: 'center'
      valign: 'top'
    Button:
      size_hint_y: 0.7
      font_name: "fonts/iosevka-regular.ttf"
      font_size: self.height / 3
      font_style: "bold"
      background_color: [0.3, 0.3, 0.3, 1]
      color: app.formats.display_color
      text: app.servo.formattedPosition
      text_size: self.size
      halign: 'center'
      valign: 'middle'

  Button:
    width: self.height
    size_hint_x: 0.2
    text: "Stop" if root.enable_jog else "< Jog"
    text_halign: "center"
    font_size: self.height / 4
    font_style: "bold"
    halign: "center"
    background_color: app.formats.cancel_color if root.enable_jog else app.formats.accept_color
    disabled: not app.servo.servoEnable
    on_press: root.enable_jog_reverse = True
    on_release: root.enable_jog_reverse = False

  Button:
    width: self.height
    size_hint_x: 0.2
    text: "Stop" if root.enable_jog else "Start"
    text_halign: "center"
    font_size: self.height / 4
    font_style: "bold"
    halign: "center"
    background_color: app.formats.cancel_color if root.enable_jog else app.formats.accept_color
    disabled: not app.servo.servoEnable
    on_release: root.enable_jog = not root.enable_jog


  Button:
    width: self.height
    size_hint_x: 0.2
    text: "Stop" if root.enable_jog else "Jog >"
    text_halign: "center"
    font_size: self.height / 4
    font_style: "bold"
    halign: "center"
    background_color: app.formats.cancel_color if root.enable_jog else app.formats.accept_color
    disabled: not app.servo.servoEnable
    on_press: root.enable_jog = True
    on_release: root.enable_jog = False