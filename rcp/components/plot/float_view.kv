#: import Scene rcp.components.plot.scene
#: import CoordsOverlay rcp.components.plot.coords_overlay
<FloatView>:
    scene_canvas: scene_canvas
    BoxLayout:
        orientation: "horizontal"
        pos: root.pos
        size: root.size

        ScrollView:
            scroll_x: 0.5
            scroll_y: 0.5
            scroll_wheel_distance: 0
            RelativeLayout:
                size_hint: None, None
                size: 10000, 10000
                Scene:
                    id: scene_canvas
                    zoom: root.zoom
                    points: root.circle_pattern.points
                    tool_x: root.tool_x
                    tool_y: root.tool_y

    CoordsOverlay:
        pos: root.pos
        size: root.size
        zoom: root.zoom
        selected_x: root.circle_pattern.points[root.scene_canvas.selected_point][0]
        selected_y: root.circle_pattern.points[root.scene_canvas.selected_point][1]
