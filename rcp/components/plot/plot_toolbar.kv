#: import Factory kivy.factory.Factory
#: import Keypad rcp.components.keypad
#: import ToolbarButton rcp.components.toolbars.toolbar_button
#: import CirclePopup rcp.components.plot.circle_popup
#: import ImageButton rcp.components.toolbars.image_button

<PlotToolbar>:
  size_hint_y: None
  height: 80
  orientation: "horizontal"

  ToolbarButton:
    # Zoom  Out
    size_hint: None, None
    width: root.height
    height: self.width
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf010"
    on_release: root.float_view.zoom = root.float_view.zoom / 1.1

  ToolbarButton:
    # Zoom In
    size_hint: None, None
    width: root.height
    height: self.width
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf00e"
    on_release: root.float_view.zoom = root.float_view.zoom * 1.1

  ImageButton:
    # Circle Pattern
    size_hint: None, None
    width: root.height
    height: self.width
    source: "pictures/circular-pattern-icon-white.png"
    on_release: Factory.CirclePopup(ref=root.float_view.circle_pattern).show()

  ImageButton:
    # Rect Patterm
    size_hint: None, None
    width: root.height
    height: self.width
    source: "pictures/rectangular-pattern-icon-white.png"
#    text: "REC"
#    on_release: root.float_view.connect_rect()

  Widget:
    size_hint_x: 1

  ToolbarButton:
    # Close
    size_hint: None, None
    width: root.height
    height: self.width
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf2f5"
    on_release: root.popup_instance.cancel()
