#: import Factory kivy.factory.Factory
#: import Keypad rcp.components.keypad
#: import ToolbarButton rcp.components.toolbars.toolbar_button
#: import CirclePopup rcp.components.plot.circle_popup

<PlotToolbar>:
  size_hint_y: None
  height: 80
  orientation: "horizontal"

  ToolbarButton:
    # Zoom  Out
    size_hint: None, None
    width: root.height
    height: self.width
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf010"
    on_release: root.float_view.zoom = root.float_view.zoom / 1.1

  ToolbarButton:
    # Zoom In
    size_hint: None, None
    width: root.height
    height: self.width
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf00e"
    on_release: root.float_view.zoom = root.float_view.zoom * 1.1

  ToolbarButton:
    # Circle Pattern
    text: "Circ"
    size_hint: None, None
    width: root.height
    height: self.width
    on_release: Factory.CirclePopup(ref=root.float_view.circle_pattern).show()

  ToolbarButton:
    text: "Rect"
    size_hint: None, None
    width: root.height
    height: self.width

  ToolbarButton:
    text: "<"
    size_hint: None, None
    width: root.height
    height: self.width
    on_release: root.prev_point()

  ToolbarButton:
    text: ">"
    size_hint: None, None
    width: root.height
    height: self.width
    on_release: root.next_point()


  Widget:
    size_hint_x: 1

  ToolbarButton:
    # Close
    size_hint: None, None
    width: root.height
    height: self.width
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf2f5"
    on_release: root.popup_instance.cancel()
