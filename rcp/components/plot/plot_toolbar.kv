#: import Factory kivy.factory.Factory
#: import Keypad rcp.components.keypad
#: import ToolbarButton rcp.components.toolbars.toolbar_button
#: import CirclePopup rcp.components.plot.circle_popup

<PlotToolbar>:
  spacing: 10
  size_hint_y: None
  height: 80
  orientation: "horizontal"

  ToolbarButton:
    # Zoom  Out
    size_hint: 1, 1
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf010"
    on_release: root.float_view.zoom = root.float_view.zoom / 1.1

  ToolbarButton:
    # Zoom In
    size_hint: 1, 1
    font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
    text: "\uf00e"
    on_release: root.float_view.zoom = root.float_view.zoom * 1.1

  ToolbarButton:
    # Circle Pattern
    size_hint: 1, 1
    text: "Circ"
    on_release: Factory.CirclePopup(ref=root.float_view.circle_pattern).show()

  ToolbarButton:
    size_hint: 1, 1
    text: "Rect"

  ToolbarButton:
    size_hint: 1, 1
    text: "<"
    on_release: root.prev_point()

  ToolbarButton:
    size_hint: 1, 1
    text: ">"
    on_release: root.next_point()
