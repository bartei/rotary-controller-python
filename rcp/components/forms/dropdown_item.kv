<DropDownItem>:
  main_button: main_button
  height: 36
  size_hint_y: None
  BoxLayout:
    orientation: "horizontal"
    Button:
      size_hint_x: None
      width: self.height
      font_name: "fonts/Font Awesome 6 Free-Solid-900.otf"
      font_size: 21
      text: "\uf129"
    Label:
      size_hint_x: 0.7
      text: root.name
    Button:
      id: main_button
      size_hint_x: None
      width: 250
#      multiline: False
#      text: 'ON' if root.value else 'OFF'
#      state: 'down' if root.value else 'normal'
      on_release: root.dropdown.open(self)
