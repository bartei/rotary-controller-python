<SetupScreen>:
  title: "Setup Menu"
  size_hint: 1, 1
  auto_dismiss: False
  GridLayout:
    spacing: 36
    padding: 36
    cols: 4
    Button:
      text: "Scale 0"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "scale_0"
    Button:
      text: "Scale 1"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "scale_1"

    Button:
      text: "Scale 2"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "scale_2"

    Button:
      text: "Scale 3"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "scale_3"

    Button:
      text: "Servo"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "servo"

    Button:
      text: "Network"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "network"

    Button:
      text: "Formats"
      on_release:
        app.manager.transition.direction = 'left'
        app.manager.current = "formats"

    Button:
      text: "Exit"
      on_release:
        app.manager.transition.direction = 'right'
        app.manager.current = "home"
