#: import StringItem rcp.components.forms.string_item
#: import BooleanItem rcp.components.forms.boolean_item
#: import DropDownItem rcp.components.forms.dropdown_item

<NetworkPanel>:
  orientation: "vertical"
  ScrollView:
    do_scroll_x: False
    do_scroll_y: True
    GridLayout:
      id: grid_layout
      cols: 1
      spacing: 1
      size_hint_y: None

      TitleItem:
        name: "Network Interface"

      DropDownItem:
        name: "Network Interface"
        options: root.devices
        value: root.devices[0] if len(root.devices) > 0 else ""

      StringItem:
        name: "Hardware Address"
        disabled: True
        value: root.hwaddr

      BooleanItem:
        name: "Enable Interface"
        value: root.wifi_enabled
        on_value: root.wifi_enabled = self.value

      StringItem:
        name: "State"
        disabled: True
        value: root.state

      TitleItem:
        name: "Connection Properties"

      DropDownItem:
        name: "Connection"
        options: root.networks
        value: root.connection
        on_value: root.connection = self.value

      StringItem:
        name: "Wifi Password"
        value: root.password
        on_value: root.password = self.value

      TitleItem:
        name: "IP Properties"

      StringItem:
        name: "IP Address"
        value: root.address
        disabled: True
        on_value: root.address = self.value

      StringItem:
        name: "DNS Server"
        value: root.dns
        disabled: True
        on_value: root.dns = self.value

      StringItem:
        name: "Default Gateway"
        value: root.gateway
        disabled: True
        on_value: root.gateway = self.value

      TitleItem:
        name: "Commands"

      BoxLayout:
        size_hint_y: None
        height: 48
        orientation: "horizontal"

        Button:
          text: "Scan"
          background_color: "#3acf3a"
          on_release: root.scan()

        Button:
          text: "Apply"
          background_color: "#3acf3a"
          on_release: root.apply()

      TitleItem:
        name: "Status"
      TextInput:
        size_hint_y: None
        height: 160
        readonly: True
        multiline: True
        text: root.status_text