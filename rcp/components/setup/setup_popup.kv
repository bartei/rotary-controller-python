#: import ScalePanel rcp.components.setup.scale_panel

<SetupPopup>:
  title: "Setup Menu"
  size_hint: 1, 1
  auto_dismiss: False
  GridLayout:
    spacing: 4
    padding: 4
    cols: 4
    Button:
      text: "Scale 0"
      on_release: Factory.ScalePanel(scale=app.scales[0]).open()
    Button:
      text: "Scale 1"
      on_release: Factory.ScalePanel(scale=app.scales[1]).open()
#      on_release: root.screen_manager.current = "scale_1"
    Button:
      text: "Scale 2"
      on_release: Factory.ScalePanel(scale=app.scales[2]).open()
#      on_release: root.screen_manager.current = "scale_2"
    Button:
      text: "Scale 3"
      on_release: Factory.ScalePanel(scale=app.scales[3]).open()
#      on_release: root.screen_manager.current = "scale_3"
    Button:
      text: "Servo"
#      on_release: root.screen_manager.current = "servo"
    Button:
      text: "Network"
#      on_release: root.screen_manager.current = "network"
    Button:
      text: "Formats"
#      on_release: root.screen_manager.current = "formats"
    Button:
      text: "Exit"
      on_release: root.dismiss()
