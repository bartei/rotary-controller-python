#: import ScalePanel rcp.components.setup.scale_panel
#: import NetworkPanel rcp.components.setup.network_panel

<SetupPopup>:
  title: "Setup Menu"
  size_hint: 1, 1
  auto_dismiss: False
  GridLayout:
    spacing: 4
    padding: 4
    cols: 4
    Button:
      text: "Scale 0"
      on_release: root.scale_panel(scale=app.scales[0])
    Button:
      text: "Scale 1"
      on_release: root.scale_panel(scale=app.scales[1])
    Button:
      text: "Scale 2"
      on_release: root.scale_panel(scale=app.scales[2])
    Button:
      text: "Scale 3"
      on_release: root.scale_panel(scale=app.scales[3])
    Button:
      text: "Servo"
      on_release: root.servo_panel()
    Button:
      text: "Network"
      on_release: root.network_panel()
    Button:
      text: "Formats"
      on_release: root.formats_panel()
    Button:
      text: "Exit"
      on_release: root.dismiss()
