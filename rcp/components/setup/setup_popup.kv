#: import ScalePanel rcp.components.setup.scale_panel
#: import NetworkPanel rcp.components.setup.network_panel

<SetupPopup>:
  title: "Setup Menu"
  size_hint: 1, 1
  auto_dismiss: False
  GridLayout:
    spacing: 4
    padding: 4
    cols: 4
    Button:
      text: "Scale 0"
      on_release: Factory.ScalePanel(scale=app.scales[0]).open()
    Button:
      text: "Scale 1"
      on_release: Factory.ScalePanel(scale=app.scales[1]).open()
    Button:
      text: "Scale 2"
      on_release: Factory.ScalePanel(scale=app.scales[2]).open()
    Button:
      text: "Scale 3"
      on_release: Factory.ScalePanel(scale=app.scales[3]).open()
    Button:
      text: "Servo"
    Button:
      text: "Network"
      on_release: Factory.NetworkPanel().open()
    Button:
      text: "Formats"
    Button:
      text: "Exit"
      on_release: root.dismiss()
